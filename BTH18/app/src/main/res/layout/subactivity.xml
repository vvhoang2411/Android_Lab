<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/TableLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <!-- Row 1 -->
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView1"
            android:text="#"
            android:textStyle="bold"
            android:layout_marginEnd="5dp" />

        <TextView
            android:id="@+id/txtmaso"
            android:text="Mã số"
            android:textStyle="bold" />
    </TableRow>

    <!-- Row 2 -->
    <TableRow
        android:id="@+id/tableRow2">

        <TextView
            android:id="@+id/textView2"
            android:text="Tên bài hát:" />

        <TextView
            android:id="@+id/txttenbaihat"
            android:text="CHÉN ĐẮNG (REMIX)"
            android:textColor="#00FF00"
            android:textStyle="bold" />
    </TableRow>

    <!-- Row 3 -->
    <TableRow
        android:id="@+id/tableRow3">

        <TextView
            android:id="@+id/textView3"
            android:text="Lời bài hát:" />

        <TextView
            android:id="@+id/txtloibaihat"
            android:text="Một ngày anh nhớ, nhớ bóng hình em, trái tim..."
            android:maxLines="2"
            android:ellipsize="end" />
    </TableRow>

    <!-- Row 4 -->
    <TableRow
        android:id="@+id/tableRow4">

        <TextView
            android:id="@+id/textView4"
            android:text="Tác giả:" />

        <TextView
            android:id="@+id/txttacgia"
            android:text="Trương Lê Sơn"
            android:textColor="#FF0000" />
    </TableRow>

    <!-- Row 5 -->
    <TableRow
        android:id="@+id/tableRow5">

        <TextView
            android:id="@+id/textView5"
            android:text="Yêu Thích:" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btnthich"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/btn_star_big_on"
                android:contentDescription="love" />

            <ImageButton
                android:id="@+id/btnkhongthich"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/btn_star_big_off"
                android:contentDescription="unlike" />
        </FrameLayout>
    </TableRow>
</TableLayout>