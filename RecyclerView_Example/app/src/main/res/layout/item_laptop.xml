<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/laptopImage"
        android:layout_width="100dp"
        android:layout_height="106dp"
        android:contentDescription="TODO"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/laptopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laptop Name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/laptopDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laptop Description" />

        <RatingBar
            android:id="@+id/laptopRating"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="4.0"
            android:stepSize="0.5" />

        <TextView
            android:id="@+id/laptopPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20.000.000Đ"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
